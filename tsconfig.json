{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
        "@mappers/*": ["database/mappers/*"],
        "@models/*": ["database/models/*"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist", "node_modules"]  
  }
}